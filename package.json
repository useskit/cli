{
  "name": "@useskit/cli",
  "version": "0.1.0",
  "description": "The useskit command line interface (CLI)",
  "keywords": [
    "useskit",
    "kitjs",
    "SPA",
    "cli"
  ],
  "license": "MIT",
  "author": "Aipeli",
  "homepage": "https://www.useskit.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/useskit/cli.git"
  },
  "bugs": {
    "url": "https://github.com/useskit/cli/issues"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "useskit": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rollup -c ./.configs/rollup.config.ts -w",
    "rollup:dev": "cross-env NODE_ENV=develop rollup -w --config ./.configs/rollup.config.dev.ts --configPlugin typescript",
    "rollup:prod": "cross-env NODE_ENV=production rollup --config ./.configs/rollup.config.prod.ts --configPlugin typescript",
    "link": "pnpm run rollup:dev && pnpm link --global",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "esbuild": "^0.15.10",
    "yargs": "^17.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "@types/node": "^18.7.14",
    "@types/yargs": "^17.0.13",
    "@useskit/eslint-config": "*",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "rollup": "^2.79.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.8.2"
  },
  "lint-staged": {
    "*.{js,ts,json}": "eslint . --fix"
  }
}
