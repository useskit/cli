{
    "name": "js-single-package-template",
    "version": "0.1.0",
    "description": "single package template for javascript",
    "keywords": [
        "useskit",
        "kitjs",
        "vanilla",
        "SPA",
        "router"
    ],
    "license": "MIT",
    "author": "Aipeli",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/useskit/js-single-package-template.git"
    },
    "main": "./dist/index.umd.min.js",
    "module": "./dist/index.esm.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.esm.js"
        }
    },
    "files": [
        "dist"
    ],
    "bugs": {
        "url": "https://github.com/useskit/js-single-package-template/issues"
    },
    "homepage": "https://www.useskit.com",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "rollup -c -w",
        "eslint": "eslint .",
        "eslint:fix": "eslint . --fix",
        "prepare": "husky install",
        "precommit": "lint-staged"
    },
    "devDependencies": {
        "@babel/core": "^7.18.13",
        "@babel/preset-env": "^7.18.10",
        "@commitlint/cli": "^17.1.2",
        "@commitlint/config-conventional": "^17.1.0",
        "@rollup/plugin-babel": "^5.3.1",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@types/node": "^18.7.14",
        "@useskit/eslint-config": "*",
        "eslint": "^8.23.0",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "rollup": "^2.79.0",
        "rollup-plugin-banner": "^0.2.1",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.33.0",
        "typescript": "^4.8.2"
    },
    "lint-staged": {
        "*.{vue,js,ts,jsx,tsx,json}": "eslint . --fix"
    }
}
