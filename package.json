{
  "name": "@useskit/cli",
  "version": "0.1.0",
  "description": "The useskit command line interface (CLI)",
  "keywords": [
    "useskit",
    "kitjs",
    "SPA",
    "cli"
  ],
  "license": "MIT",
  "author": "Aipeli",
  "homepage": "https://www.useskit.com",
  "baseUrl": "./src",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/useskit/cli.git"
  },
  "bugs": {
    "url": "https://github.com/useskit/cli/issues"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "bin": {
    "useskit": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rollup -c -w",
    "dev": "esbuild --bundle ./src/index.ts --format=cjs --platform=node --outfile=./dist/index.js --external:esbuild --watch",
    "tsc": "tsc",
    "link": "pnpm run build && pnpm link --global",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "esbuild": "^0.15.10",
    "yargs": "^17.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/node": "^18.7.14",
    "@types/yargs": "^17.0.13",
    "@useskit/eslint-config": "*",
    "eslint": "^8.23.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "rollup": "^2.79.0",
    "rollup-plugin-banner": "^0.2.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.33.0",
    "typescript": "^4.8.2"
  },
  "lint-staged": {
    "*.{js,ts,json}": "eslint . --fix"
  }
}
